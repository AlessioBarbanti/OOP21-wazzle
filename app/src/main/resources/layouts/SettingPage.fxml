<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" fillHeight="false" styleClass="rootBackground" stylesheets="@../styles/settings.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="mainSettingsWrapper" alignment="CENTER" HBox.hgrow="NEVER">
         <children>
            <VBox fx:id="mainSettingWindow" alignment="CENTER" styleClass="gridBackground" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" styleClass="longIncave" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="difficultySelectorLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="DifficoltÃ " textAlignment="CENTER" textOverrun="CLIP" wrapText="true" VBox.vgrow="NEVER" />
                        <ComboBox fx:id="difficultySelectorCBox" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                           <styleClass>
                              <String fx:value="longIncave" />
                              <String fx:value="cBox" />
                           </styleClass></ComboBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" styleClass="longIncave" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="gridDimensionLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Dimensione Griglia" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" VBox.vgrow="NEVER" />
                        <Slider fx:id="gridDimensionSlider" blockIncrement="1.0" majorTickUnit="1.0" max="6.0" min="4.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="sliders" value="1.0" VBox.vgrow="NEVER" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="okButton" alignment="CENTER" mnemonicParsing="false" onAction="#goToScene" styleClass="orangeButton" text="OK" textAlignment="CENTER" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="cancelButton" alignment="CENTER" mnemonicParsing="false" onAction="#goToScene" styleClass="orangeButton" text="Annulla" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
