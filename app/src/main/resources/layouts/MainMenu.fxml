<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bp" stylesheets="@../styles/application.css" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1"> <!--  fx:controller="application.MainMenuController"> -->
   <right>
      <Pane id="mainMenuRightPane" fx:id="mainMenuRightPane" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox fx:id="mainWrapperButtons" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titleLabel" text="WAZZLE" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
            <Button fx:id="startMainGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goToScene" pickOnBounds="false" styleClass="orangeButton" text="Gioca Ora" textAlignment="CENTER" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="startMiniGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="44.0" layoutY="283.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goToScene" pickOnBounds="false" styleClass="orangeButton" text="Bonus giornaliero" textAlignment="CENTER" />
            <Button fx:id="leaderboardButton" alignment="CENTER" contentDisplay="CENTER" layoutX="69.0" layoutY="222.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goToScene" pickOnBounds="false" styleClass="orangeButton" text="classifica" textAlignment="CENTER" />
            <Button fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" layoutX="53.0" layoutY="323.0" mnemonicParsing="false" onAction="#goToScene" pickOnBounds="false" styleClass="redButton" text="Esci" textAlignment="CENTER" />
         </children>
      </VBox>
   </center>
   <left>
      <Button fx:id="settingsButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToScene" style="-fx-background-color: #0000;" BorderPane.alignment="TOP_LEFT">
         <graphic>
            <ImageView fx:id="settingsIcon" onMouseClicked="#goToScene" pickOnBounds="true" preserveRatio="true" />
         </graphic>
      </Button>
   </left>
</BorderPane>
