<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainWrapper" alignment="CENTER" fillWidth="false" styleClass="rootBackground" stylesheets="@../styles/tutorial-main-game.css" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="elementWrapper" alignment="CENTER" styleClass="letters" VBox.vgrow="ALWAYS">
         <children>
            <VBox fx:id="contentWrapper" alignment="CENTER" styleClass="gridBackground" VBox.vgrow="NEVER">
               <children>
                  <ImageView fx:id="gifTutorial" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="textLabel" alignment="CENTER" contentDisplay="CENTER" text="Lorem ipsum dolor sit amen">
                     <styleClass>
                        <String fx:value="letters" />
                        <String fx:value="longIncave" />
                     </styleClass></Label>
               </children>
            </VBox>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#nextScene" styleClass="redButton" text="Esci" VBox.vgrow="NEVER" />
         </children>
      </VBox>
   </children>
</VBox>
